<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/s0"
	android:layout_width="match_parent" android:layout_height="match_parent">
	
<RelativeLayout 
	android:id="@+id/r0" 
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="#FFFFFF">
  	 	<ImageView 
  	 	  	android:id="@+id/img_photo" 
  	 	  	android:src="@drawable/new_report_camera" 
  	 		android:layout_width="wrap_content" android:layout_height="wrap_content" 
  	 		android:scaleType="centerInside"
  	 		android:layout_centerHorizontal="true" 
  	 		android:layout_margin="10dip"
  	 		android:contentDescription="@string/desc_img_photo">
  	 	</ImageView>
  	 	<EditText 
       		android:id="@+id/edt_newReport" 
       		android:textColor="#C4C4C4"
       		android:text="@string/fill_report" 
       		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
       		android:layout_width="fill_parent" android:layout_height="100dip" 
       		android:layout_below="@+id/img_photo" 
       		android:inputType="textMultiLine">
       	</EditText>
       	<RelativeLayout 
  	 		android:id="@+id/r1" 
  	 		android:layout_below="@+id/edt_newReport"
  	 		android:layout_width="match_parent" android:layout_height="wrap_content" 
  	 		android:background="@drawable/main_r2"  android:layout_marginLeft="10dip" 
  	 		android:layout_marginRight="10dip" android:layout_marginTop="15dip">
	  	 	<TextView 
  	 			android:id="@+id/txt_MapView"
	  	 		android:text="@string/view_location" 
	  	 		android:textStyle="italic"
	  	 		android:layout_alignParentRight="true" 
	  	 		android:layout_width="wrap_content"
	  	 		android:textColor="#254794"  
	  	 		android:layout_height="wrap_content"  
	  	 		android:padding="10dip">
	  	 	</TextView>
  	 	</RelativeLayout>	
    	<TextView 
       		android:textColor="#000000" 
       		android:id="@+id/txt_firstname" 
       		android:layout_height="wrap_content" android:layout_width="wrap_content"  
       		android:text="@string/first_name" 
       		android:layout_alignParentLeft="true" android:layout_below="@+id/r1"
       		android:layout_marginLeft="10dip" android:layout_marginTop="15dip">
       	</TextView>
       	<EditText 
       		android:id="@+id/edt_firstname" 
       		android:text="" 
       		android:layout_marginLeft="10dip" android:layout_marginRight="10dip" 
       		android:layout_width="fill_parent" android:layout_height="wrap_content" 
       		android:singleLine="true" 
       		android:layout_below="@+id/txt_firstname"
       		android:inputType="text">
       	</EditText>
       	<TextView 
       		android:id="@+id/txt_lastname"
       		android:textColor="#000000"  
       		android:layout_height="wrap_content" android:layout_width="wrap_content"
       		android:text="@string/last_name"  
       		android:layout_below="@+id/edt_firstname" 
       		android:layout_marginLeft="10dip">
       	</TextView>
       	<EditText 
       		android:id="@+id/edt_lastname" 
       		android:text="" 
       		android:layout_marginLeft="10dip" android:layout_marginRight="10dip" 
       		android:layout_width="fill_parent" android:layout_height="wrap_content" 
       		android:singleLine="true" 
       		android:layout_below="@+id/txt_lastname"
       		android:inputType="text">
       	</EditText>
       	<TextView 
       		android:id="@+id/txt_email" 
       		android:textColor="#000000" 
       		android:layout_height="wrap_content" android:layout_width="wrap_content" 
       		android:text="@string/email"  
       		android:layout_below="@+id/edt_lastname" 
       		android:layout_marginLeft="10dip">
       	</TextView>
       	<EditText 
       		android:id="@+id/edt_email" 
       		android:text="" 
       		android:layout_marginLeft="10dip" android:layout_marginRight="10dip" 
       		android:layout_width="fill_parent" android:layout_height="wrap_content" 
       		android:singleLine="true" 
       		android:layout_below="@+id/txt_email"
       		android:inputType="textEmailAddress">
       	</EditText>	
       	<TextView 
       		android:id="@+id/txt_phone" 
       		android:textColor="#000000" 
       		android:layout_height="wrap_content" android:layout_width="wrap_content" 
       		android:text="@string/phone"  
       		android:layout_below="@+id/edt_email" 
       		android:layout_marginLeft="10dip">
       	</TextView>
       	<EditText 
       		android:id="@+id/edt_phone" 
       		android:text="" 
       		android:layout_marginLeft="10dip" android:layout_marginRight="10dip" 
       		android:layout_width="fill_parent" android:layout_height="wrap_content" 
       		android:singleLine="true" 
       		android:layout_below="@+id/txt_phone"
       		android:inputType="number">
       	</EditText>	
      		<TextView 
 	 			android:id="@+id/txt_SendingFailed"
  	 		android:text="@string/sent_failed" 
      			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
      			android:layout_below="@+id/edt_phone"
  	 		android:layout_width="wrap_content"
  	 		android:textColor="#EE0000"  
  	 		android:layout_height="wrap_content"  >
  	 	</TextView>
        <Button 
 			android:id="@+id/btn_submit" 
 			android:layout_width="fill_parent" android:layout_height="wrap_content" 
 			android:text="@string/send" 
 			android:layout_below="@+id/txt_SendingFailed" 
 			android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip">
 		</Button>
</RelativeLayout>
</ScrollView>
